    # SCREEN
    BoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        padding: "5dp"
    
        # HEADER
        BoxLayout:
            size_hint_y: 2
            spacing: "5dp"
            orientation: 'vertical'

            # ROW 1
            BoxLayout:
                size_hint_y: 1
                spacing: "3dp"

                Button:
                    size_hint_x: 1
                    text: "<"
                    font_size: "32sp"
                    on_release:
                        root.go_back()

                # LOGO
                BoxLayout:
                    id: logo_layout
                    size_hint_x: 1

                Label: # placeholder
                    size_hint_x: 1

                Label:
                    size_hint_x: 3
                    id: mode_label
                    font_size: "25sp"
                    halign: "center"
                    valign: "middle"
                    text_size: self.size
            
            # ROW 2
            GridLayout:
                id: mode_toggle_layout
                cols: 2
                size_hint_y: 1
                height: self.minimum_height
                row_default_height: '50dp'
                spacing: '5dp'

                ToggleButton:
                    id: mode_toggle_training
                    font_size: "32sp"
                    group: 'mode'
                    on_release: root.on_mode_toggle(self)

                ToggleButton:
                    id: mode_toggle_game
                    font_size: "32sp"
                    group: 'mode'
