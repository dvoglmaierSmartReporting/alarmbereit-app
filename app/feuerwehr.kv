#:kivy 2.3.0

<StartMenu>:
    name: "startmenu"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: "3dp"

        Label:
            text: "Modus:"
            font_size: "32sp"
        
        BoxLayout:
            Button:
                text: "Training"
                font_size: "32sp"
                # on_press: 
            Button:
                text: "Game"
                font_size: "32sp"
                # on_press: 
                disabled: True  # Disable since not implemented
        
        Label:
            text: "Fragen:"
            font_size: "32sp"
        
        Button:
            text: "Fahrzeugkunde"
            font_size: "32sp"
            on_release:
                app.root.current = "fahrzeugkundemenu"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Bewerb"
            font_size: "32sp"
            on_release:
                app.root.current = "bewerbmenu"
                root.manager.transition.direction = "left"
            # disabled: True  # Disable since not implemented

<FahrzeugkundeMenu>:
    name: "fahrzeugkundemenu"
    firetrucks_layout: firetrucks_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "startmenu"
            root.manager.transition.direction = "right"

    BoxLayout:
        id: firetrucks_layout
        size_hint: 1, 0.9
        orientation: 'vertical'
        spacing: "5dp"

<BewerbMenu>:
    name: "bewerbmenu"
    #orientation: "vertical"
    bewerbe_layout: bewerbe_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "startmenu"
            root.manager.transition.direction = "right"

    # BoxLayout:
    GridLayout:
    # Scroll
        id: bewerbe_layout
        size_hint: 1, 0.9
        #orientation: 'vertical'
        spacing: "5dp"
        cols: 1

<FahrzeugkundeGame>:
    name: "fahrzeugkundegame"
    tool_label: tool_label
    rooms_layout: rooms_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "fahrzeugkundemenu"
            root.manager.transition.direction = "right"

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: tool_label
            size_hint: 1, 0.15
            font_size: "25sp"

        GridLayout:
            id: rooms_layout
            size_hint: 1, 0.797
            spacing: "3dp"
            cols: 2

<BewerbGame>:
    name: "bewerbgame"
    question_label: question_label
    question_id_label: question_id_label
    answer_label: answer_label
    # answers_layout: answers_layout  # multiple-choice

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "bewerbmenu"
            root.manager.transition.direction = "right"

    Label:
        id: question_id_label
        font_size: "32sp"
        halign: "right"
        size_hint: None, None
        size: "500dp", "50dp"
        text_size: self.width, None
        pos_hint: {'right': 1, 'top': 1}

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: question_label
            size_hint: 1, 0.425
            font_size: "35sp"
        
        Label:
            id: answer_label
            size_hint: 1, 0.425
            font_size: "35sp"

        GridLayout:
            id: rooms_layout
            size_hint: 1, 0.15
            spacing: "3dp"
            cols: 2
    
            Button:
                text: "Lösung"
                font_size: "32sp"
                on_release:
                    root.manager.get_screen('bewerbgame').reveal_answer()
    
            Button:
                text: "Nächste"
                font_size: "32sp"
                on_release:
                    root.manager.get_screen('bewerbgame').next_question()
        