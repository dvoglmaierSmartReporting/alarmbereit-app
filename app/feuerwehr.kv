#:kivy 2.3.0


<Login>:
    name: "login"

    # IDs
    logo_layout: logo_layout
    login_label: login_label
    login_layout: login_layout
    city_scrollview: city_scrollview
    city_layout: city_layout
    store_selection_button: store_selection_button

    # LOGO
    FloatLayout:
        id: logo_layout

    # SCREEN
    BoxLayout:
        orientation: 'vertical'
        padding: "5dp"
        spacing: "10dp"

        # HEADER
        BoxLayout:
            size_hint_y: 2
            spacing: "3dp"

            Label: # placeholder
                size_hint_x: 2

            Label:
                size_hint_x: 1
                id: login_label
                font_size: "25sp"
                halign: "center"
                valign: "middle"
                text_size: self.size
            
        # SEPARATOR
        BoxLayout:
            size_hint_y: None
            height: 2
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

        # LOGIN
        BoxLayout:
            id: login_layout
            orientation: 'vertical'
            size_hint_y: 6.5
            
            # CITY
            ScrollView:
                id: city_scrollview
                do_scroll_x: False
                
                GridLayout:
                    id: city_layout
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: '50dp'
                    spacing: "5dp"

        # SEPARATOR
        BoxLayout:
            size_hint_y: None
            height: 2
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

        # STORE SELECTION
        BoxLayout:
            size_hint_y: 1.5

            Button:
                id: store_selection_button
                font_size: "32sp"
                on_release:
                    root.manager.get_screen('login').store_selection()


<Start_Menu>:
    name: "start_menu"
    
    # IDs
    logo_layout: logo_layout
    content_layout: content_layout
    info_button: info_button
    acknowledgement_button: acknowledgement_button
    all_cities_button: all_cities_button

    # LOGO
    FloatLayout:
        id: logo_layout

    # SCREEN
    BoxLayout:
        orientation: 'vertical'
        padding: "5dp"
        spacing: "10dp"

        # HEADER
        BoxLayout:
            size_hint_y: 2
            spacing: "3dp"

            # ACKNOWLEDGEMENT BUTTON
            Button:
                size_hint_x: 3
                id: acknowledgement_button
                font_size: "20sp"
                background_normal: ''
                background_color: 0, 0, 0, 0
                on_release:
                    app.root.current = "acknowledgement_screen"
                    root.manager.transition.direction = "left"

            Label:  # placeholder
                size_hint_x: 1
            
            BoxLayout:
                size_hint_x: 2
                orientation: 'vertical'
                spacing: "15dp"
                padding: "15dp"

                # INFO BUTTON
                Button:
                    size_hint_y: 1
                    id: info_button
                    font_size: "20sp"
                    background_normal: ''
                    background_color: 0.2, 0.2, 0.2, 0.5
                    on_release:
                        app.root.current = "info_screen"
                        root.manager.transition.direction = "left"
                        root.update_info_text()

                # ALL CITIES BUTTON
                Button:
                    size_hint_y: 1
                    id: all_cities_button
                    font_size: "20sp"
                    background_normal: ''
                    background_color: 0.2, 0.2, 0.2, 0.5
                    on_release:
                        app.root.current = "login"
                        root.manager.transition.direction = "right"

        # SEPARATOR
        BoxLayout:
            size_hint_y: None
            height: 2
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        # CONTENT
        BoxLayout:
            id: content_layout
            size_hint_y: 7.5
            orientation: "vertical"
           # padding: "5dp"
            spacing: "5dp"
        
        Label: # placeholder
            size_hint_y: 0.5

    # VERSION
    FloatLayout:
        Label:
            text: "Version 2.3.2"
            font_size: "10sp"
            size_hint: 0.1, 0.03
            pos_hint: {"center_x": 0.5, "y": 0}


