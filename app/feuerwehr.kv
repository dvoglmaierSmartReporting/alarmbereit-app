<Bewerb_Menu>:
    name: "bewerb_menu"

    # IDs
    logo_layout: logo_layout
    mode_label: mode_label
    mode_toggle_layout: mode_toggle_layout
    mode_toggle_training: mode_toggle_training
    mode_toggle_game: mode_toggle_game
    bewerbe_layout_scrollview: bewerbe_layout_scrollview
    bewerbe_layout: bewerbe_layout

    # LOGO
    #FloatLayout:
    #    Image:
    #        source: "assets/lfv_salzburg.png"
    #        fit_mode: "fill"  # or "contain" if preserving aspect is needed
    #        size_hint: 0.225, 0.092  # 20% width, 10% height of screen
