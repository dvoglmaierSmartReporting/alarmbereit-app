<StartMenu>:
    name: "startmenu"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: "3dp"

        Label:
            text: "Modus:"
            font_size: "32sp"
        
        BoxLayout:
            Button:
                text: "Training"
                font_size: "32sp"
                # on_press: 
            Button:
                text: "Game"
                font_size: "32sp"
                # on_press: 
                disabled: True  # Disable since not implemented
        
        Label:
            text: "Fragen:"
            font_size: "32sp"
        
        Button:
            text: "Fahrzeugkunde"
            font_size: "32sp"
            on_release:
                app.root.current = "fahrzeugkundemenu"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Bewerb"
            font_size: "32sp"
            on_release:
                app.root.current = "bewerbmenu"
                root.manager.transition.direction = "left"
            disabled: True  # Disable since not implemented

<FahrzeugkundeMenu>:
    name: "fahrzeugkundemenu"
    #firetrucks_layout: firetrucks_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "startmenu"
            root.manager.transition.direction = "right"

    BoxLayout:
        #id: firetrucks_layout
        size_hint: 1, 0.9
        orientation: 'vertical'
        spacing: "5dp"

        Button:
            text: "Rüst+Lösch"
            font_size: "32sp"
            on_release:
                app.root.current = "feuerwehrgame"
                root.manager.transition.direction = "left"
                root.manager.get_screen('feuerwehrgame').select_firetruck(self.text)
                root.manager.get_screen('feuerwehrgame').play()

        Button:
            text: "Tank1"
            font_size: "32sp"
            on_release:
                app.root.current = "feuerwehrgame"
                root.manager.transition.direction = "left"
                root.manager.get_screen('feuerwehrgame').select_firetruck(self.text)
                root.manager.get_screen('feuerwehrgame').play()


<BewerbMenu>:
    name: "bewerbmenu"
    orientation: "vertical"
    bewerbe_layout: bewerbe_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "startmenu"
            root.manager.transition.direction = "right"
    
    BoxLayout:
        id: bewerbe_layout
        size_hint: 1, 0.9
        orientation: 'vertical'
        spacing: "5dp"
#        on_release:
#            app.root.current = "feuerwehrgame"
#            root.manager.transition.direction = "left"


<FeuerwehrGame>:
    name: "feuerwehrgame"
    question_label: question_label
    answers_layout: answers_layout
    mannschaftsraum_layout: mannschaftsraum_layout

    Button:
        text: "<"
        font_size: "32sp"
        size_hint: None, None
        size: "50dp", "50dp"
        pos_hint: {'left': 1, 'top': 1}
        on_release:
            app.root.current = "fahrzeugkundemenu"
            root.manager.transition.direction = "right"

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: question_label
            size_hint: 1, 0.15
            font_size: "25sp"

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.85

            BoxLayout:
                id: mannschaftsraum_layout
                orientation: 'vertical'
                size_hint: 1, 0.2
            
            BoxLayout:
                id: spacer
                orientation: 'vertical'
                size_hint: 1, 0.003
            
            GridLayout:
                id: answers_layout
                size_hint: 1, 0.797
                spacing: "3dp"
                cols: 2

